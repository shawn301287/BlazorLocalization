@inject NavigationManager NavigationManager
@inject IConfiguration Configuration

@if (cultures != null)
{
    <form class="form-inline">
        <select class="form-control mr-2" @bind="selectedCulture">

            <option>Select..</option>

            @foreach (var culture in cultures)
            {
                <option value=@culture.Key>@culture.Value</option>
            }
        </select>

        <button class="btn btn-outline-dark" @onclick="OnCultureChanged">Change</button>
    </form>

}

@code {
    private string selectedCulture =
        System.Threading.Thread.CurrentThread.CurrentCulture.Name;

    private Dictionary<string, string> cultures;



    protected override void OnInitialized()
    {
        cultures = Configuration.GetSection("Cultures")
        .GetChildren().ToDictionary(x => x.Key, x => x.Value);


    }


    private void OnCultureChanged()
    {


        // Get current URL
        var uri = new Uri(NavigationManager.Uri)
            .GetComponents(UriComponents.PathAndQuery, UriFormat.Unescaped);

        // Set the parameters to the Culture Controller
        var query = $"?culture={Uri.EscapeDataString(selectedCulture)}&" +
            $"redirectUri={Uri.EscapeDataString(uri)}";

        // Navigate / Redirect to Current URL after translation
        NavigationManager.NavigateTo("/Culture/SetCulture" + query, forceLoad:true);
    }
}
